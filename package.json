{
  "name": "supereffective",
  "version": "0.0.0",
  "private": true,
  "repository": "git@github.com:itsjavi/supereffective.git",
  "license": "proprietary",
  "author": "Javi Aguilar https://itsjavi.com",
  "scripts": {
    "build": "env-cmd turbo run build && pnpm format:code",
    "build:vercel": "pnpm migrate:deploy && pnpm build",
    "dev": "pnpm dev:with-docker && env-cmd turbo run dev --no-deps --no-cache --parallel --concurrency 20",
    "dev:with-docker": "docker-compose up -d",
    "format": "pnpm format:packages && pnpm format:code && pnpm lint:fix",
    "format:code": "prettier --write \"**/*.{cjs,mjs,js,ts,tsx,json,yml,yaml,css,scss,md,mdx}\"",
    "format:packages": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "postinstall": "make postinstall",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "local": "env-cmd",
    "migrate": "pnpm pkg:database prisma generate && pnpm pkg:database prisma migrate",
    "migrate:deploy": "pnpm pkg:database prisma generate && pnpm pkg:database prisma migrate deploy",
    "migrate:dev": "pnpm pkg:database prisma generate && pnpm pkg:database prisma migrate dev",
    "open": "open http://localhost:3001 && open http://localhost:3002 && open http://localhost:1080",
    "pkg:auth": "pnpm --filter '@pkg/auth'",
    "pkg:database": "pnpm --filter '@pkg/database'",
    "pkg:ui": "pnpm --filter '@pkg/ui'",
    "pkg:website": "pnpm --filter '@app/website'",
    "pretty": "pnpm format",
    "test": "env-cmd turbo run --concurrency 1 test",
    "test:coverage": "env-cmd turbo run --concurrency 1 test:coverage",
    "test:watch": "env-cmd turbo run test:watch",
    "update:packages": "pnpm update -r"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.0.0",
    "eslint": "^8.41.0",
    "eslint-config-next": "13.4.2",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.9.9",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-vitest": "^0.1.5",
    "husky": "^8.0.3",
    "next": "13.4.2",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "sort-package-json": "^2.4.1",
    "turbo": "^1.9.9",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@vitest/coverage-c8": "0.31.0",
    "env-cmd": "^10.1.0",
    "vite": "^4.3.9",
    "vitest": "0.31.0"
  },
  "packageManager": "pnpm@8.5.0",
  "engines": {
    "node": ">=18.5.0 <19.0.0"
  }
}
