{
  "name": "supereffective",
  "version": "0.0.0",
  "private": true,
  "repository": "git@github.com:itsjavi/supereffective.git",
  "license": "proprietary",
  "author": "Javi Aguilar https://itsjavi.com",
  "scripts": {
    "build": "env-cmd turbo run build && pnpm format",
    "build:vercel": "pnpm migrate:deploy && pnpm build",
    "data:update": "pnpm update:data",
    "dev": "pnpm dev:with-docker && pnpm migrate && env-cmd turbo run dev --no-deps --no-cache --parallel --concurrency 20",
    "dev:with-docker": "docker-compose up -d",
    "format": "pnpm pretty && pnpm lint:fix",
    "postinstall": "make postinstall",
    "lint": "turbo run lint:all",
    "lint:all": "eslint ./packages",
    "lint:all:fix": "eslint ./packages --fix",
    "lint:fix": "turbo run lint:all:fix",
    "migrate": "pnpm pkg:database prisma generate && pnpm pkg:database prisma migrate",
    "migrate:deploy": "pnpm pkg:database prisma generate && pnpm pkg:database prisma migrate deploy",
    "migrate:dev": "pnpm pkg:database prisma generate && pnpm pkg:database prisma migrate dev",
    "open": "open http://localhost:3001 && open http://localhost:3002 && open http://localhost:1080",
    "pkg:auth": "pnpm --filter '@pkg/auth'",
    "pkg:database": "pnpm --filter '@pkg/database'",
    "pkg:ui": "pnpm --filter '@pkg/ui'",
    "pkg:website": "pnpm --filter '@app/website'",
    "pretty": "turbo run pretty:all",
    "pretty:all": "pnpm pretty:code && pnpm pretty:pkgjsons",
    "pretty:code": "prettier --write \"**/*.{cjs,mjs,js,ts,tsx,json,yml,yaml,css,scss,md,mdx}\"",
    "pretty:pkgjsons": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "test": "turbo run test:all",
    "test:all": "env-cmd jest",
    "test:coverage": "pnpm test -- -- --coverage",
    "update:data": "pnpm pkg:database build:data && pnpm pkg:database build:code && pnpm pretty:code",
    "update:packages": "pnpm update -r"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "env-cmd": "^10.1.0",
    "eslint": "^8.43.0",
    "eslint-config-next": "13.4.7",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.10.6",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "next": "13.4.7",
    "prettier": "^2.8.8",
    "sort-package-json": "^2.4.1",
    "turbo": "^1.10.6",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@swc/core": "^1.3.67",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.2",
    "jest": "^29.5.0"
  },
  "packageManager": "pnpm@8.6.5",
  "engines": {
    "node": ">=18.5.0 <19.0.0"
  }
}
