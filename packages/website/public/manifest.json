{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "id": "gg.supereffective.app",
  "name": "SuperEffective",
  "description": "The most complete Living Dex tracker and Pokémon game companion.",
  "short_name": "SuperEffective",
  "start_url": "./",
  "scope": "./",
  "theme_color": "#1a1d1f",
  "background_color": "#1a1d1f",
  "display": "standalone",
  "lang": "en-US",
  "orientation": "portrait",
  "display_override": ["window-controls-overlay"],
  "edge_side_panel": {
    "preferred_width": 496
  },
  "icons": [
    {
      "src": "/assets/favicon/favicon-48x48.png",
      "sizes": "48x48",
      "type": "image/png"
    },
    {
      "src": "/assets/favicon/favicon-96x96.png",
      "sizes": "96x96",
      "type": "image/png"
    },
    {
      "src": "/assets/favicon/favicon-128x128.png",
      "sizes": "128x128",
      "type": "image/png"
    },
    {
      "src": "/assets/favicon/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/assets/favicon/favicon-256x256.png",
      "sizes": "256x256",
      "type": "image/png"
    },
    {
      "src": "/assets/favicon/android-chrome-384x384.png",
      "sizes": "384x384",
      "type": "image/png"
    },
    {
      "src": "/assets/favicon/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/sv3-001.jpg",
      "sizes": "1280x720",
      "type": "image/jpg",
      "platform": "wide",
      "form_factor": "wide",
      "label": "SuperEffective's Pokédex and Tracker"
    },
    {
      "src": "/screenshots/sv3-001-mobile.jpg",
      "sizes": "640x720",
      "type": "image/jpg",
      "label": "SuperEffective's Living Dex Tracker"
    }
  ],
  "shortcuts": [
    {
      "name": "Pokédex",
      "short_name": "Pokédex",
      "description": "Pokédex page",
      "url": "/apps/pokedex",
      "icons": [
        {
          "src": "/assets/favicon/favicon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Living Dexes",
      "short_name": "LivingDex",
      "description": "Living Dexes page",
      "url": "/apps/livingdex",
      "icons": [
        {
          "src": "/assets/favicon/favicon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Missing Pokémon",
      "short_name": "Missing",
      "description": "Missing Pokémon page",
      "url": "/apps/livingdex/missing",
      "icons": [
        {
          "src": "/assets/favicon/favicon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "launch_handler": {
    "client_mode": "auto"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+supereffective",
      "url": "/%s"
    }
  ],
  "related_applications": [],
  "categories": ["games", "utilities"]
}
