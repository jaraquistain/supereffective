{
  "name": "@pkg/database",
  "version": "0.0.0",
  "private": true,
  "description": "Database abstraction layer (DBAL) and ORM for supereffective.gg",
  "scripts": {
    "build": "pnpm build:data && pnpm build:code",
    "build:code": "prisma generate && node lib/codegen/generate-ids.cjs",
    "build:data": "scripts/sync-data.sh",
    "dev": "pnpm build:code && pnpm format:code && DATABASE_URL=$STUDIO_DATABASE_URL DIRECT_DATABASE_URL=$STUDIO_DATABASE_URL prisma studio --port 5555 --browser none",
    "format:code": "cd ../../ && pnpm format:code && cd -",
    "lint": "eslint \"./**/*.{ts,js,mjs,cjs}\"",
    "lint:fix": "eslint \"./**/*.{ts,js,mjs,cjs}\" --fix",
    "prisma": "prisma",
    "test": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "pnpm test:coverage && open coverage/index.html && vitest --ui --open",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@pkg/firebase": "workspace:*",
    "@pkg/mdx": "workspace:*",
    "@pkg/utils": "workspace:*",
    "@prisma/client": "^4.13.0",
    "@types/node": "^18.16.5",
    "prisma": "^4.13.0",
    "typescript": "^5.0.4",
    "zod": "^3.21.4"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
