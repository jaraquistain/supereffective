{
  "name": "@pkg/database",
  "version": "0.0.0",
  "private": true,
  "description": "Database abstraction layer (DBAL) and ORM for supereffective.gg",
  "scripts": {
    "build": "pnpm build:data && pnpm build:code",
    "build:code": "prisma generate && node lib/codegen/generate-ids.cjs",
    "build:data": "scripts/sync-data.sh",
    "dev": "pnpm build:code && pnpm pretty:code && DATABASE_URL=$STUDIO_DATABASE_URL DIRECT_DATABASE_URL=$STUDIO_DATABASE_URL prisma studio --port 5555 --browser none",
    "pretty:code": "cd ../../ && pnpm pretty:code && cd -",
    "prisma": "prisma"
  },
  "dependencies": {
    "@pkg/firebase": "workspace:*",
    "@pkg/mdx": "workspace:*",
    "@pkg/utils": "workspace:*",
    "@prisma/client": "^4.16.1",
    "@types/node": "^20.3.2",
    "prisma": "^4.16.1",
    "typescript": "^5.1.5",
    "zod": "^3.21.4"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
