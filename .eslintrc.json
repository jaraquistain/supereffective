{
  "root": true,
  "settings": {
    "next": {
      "rootDir": ["packages/*/"]
    }
  },
  "overrides": [
    {
      "files": ["*.js", "*.cjs"],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      },
      "env": {
        "node": true,
        "commonjs": true
      }
    }
  ]
}
